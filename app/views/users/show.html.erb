<div class="user-profile">
  <div class="profile row">
    <div class="col-md-4 avatar">
      <div class="wrapper">
        <img src="https://i.imgur.com/RgToMSf.jpg">
      </div>
    </div>

    <div class="col-md-8 basic-info">
      <div class="user-wrapper">
        	<h2 class="username"><%= @user.username %></h2>
					<% if current_user?(@user) %>
		        <a class="edit-profile" href="<%= edit_user_path(current_user) %>">
						  <button>Edit Profile</button>
						</a>
					<% end %>
      </div>
      <ul class="posts">
      	<%= render 'follow_form' if user_signed_in? %>
        <li>
        	<a class="posts-number"></a><span><%= @user.posts.count %></span> posts
        </li>
        <li>
        	<a class="link-followers" href="<%= followers_user_path(@user) %>"><span id="followers" class="stat"><%= @user.followers.count %></span> followers
        </li>
        <li>
        	<a class="link-following" href="<%= following_user_path(@user) %>"><span id="following" class="stat"><%= @user.following.count %></span> following</a>
        </li>
      </ul>
      <h2 class="name"><%= @user.name %></h2>
      <a class="website"><%=link_to @user.website, @user.website, class:  'website' %></a>
    </div>
  </div>
</div>

<div class="user-tabs">
  <a class="tab active" href="">
    <i class="fa fa-th"></i>
    POSTS
  </a>
  <a class="tab" href="">
    <i class="fa fa-tv"></i>
    IGTV
  </a>
  <a class="tab" href="">
    <i class="fa fa-bookmark"></i>
    SAVED
  </a>
  <a class="tab" href="">
    <i class="fa fa-tag"></i>
    TAGGED
  </a>
</div>

<%= render 'users/show_detail' %>