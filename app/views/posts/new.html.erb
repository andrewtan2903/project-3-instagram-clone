<%= cloudinary_js_config %>

<h1> New post </h1>

<div id="direct_upload">

<%= form_for Post.new do |f| %>

	<%= cl_upload_tag(:media_id) %>

	<br><br>

  <p>
    <%= f.label :caption %>
    <%= f.text_field :caption %>
  </p>

	<br>

	<span class="status"></span>

	<div class="form-group">
		<%= f.text_field :user_id, value: current_user.id, class:'d-none'%>
	</div>

	<br>

		<%= link_to "Cancel", posts_path, class: "btn btn-primary" %>

		<%= f.submit 'Create Post', class: 'btn btn-success d-none', id:'submitButton' %>
<% end %>

</div>