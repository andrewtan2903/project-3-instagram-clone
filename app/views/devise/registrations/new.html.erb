<div class="wrapper2 fadeInDown">
	<div id="formContent">
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		  <%= render "devise/shared/error_messages", resource: resource %>

		  <div class="field" id="login" class="fadeIn second" name="login" placeholder="login">
		    <br />
		    <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email" %>
		  </div>

		  <div class="field" id="password" class="fadeIn third" name="login" placeholder="login">
		    <% if @minimum_password_length %>
		    <% end %>
		    <br />
		    <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password" %>
		    <br>
		    <em>(<%= @minimum_password_length %> characters minimum)</em>
		  </div>

		  <div class="field">
		    <br/>
		    <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", autocomplete: "new-password" %>
		  </div>
		  	<br>
		  <div class="fadeIn fourth" value="Sign up">
		    <%= f.submit "Sign up" %>
		  </div>
		<% end %>
		</br>
	</div>
</div>